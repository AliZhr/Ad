                        }
                    @if (ViewBag.AfficheBand == 1)
                    {
                        @using (Html.BeginForm("ChoiceOfShift", "Visu", FormMethod.Post))
                        {
                                <td class="col-md-4"> Section : </td>
                                <td class="col-md-4">
                                    @Html.DropDownList("FConfigid", ViewBag.Bands as SelectList, "---Select Section---", new { onchange = "this.form.submit();"})
                                </td>
                        }
                                <br /><br />                           
                    }



