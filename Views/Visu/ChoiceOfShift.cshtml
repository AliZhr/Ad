
@{
    ViewData["Title"] = "ChoiceOfLayer";
}
<h1>Choice of the layer</h1>


<br />
<br />
 @using (Html.BeginForm("ChoiceOfShift", "Visu", FormMethod.Post))
                        {

                            <td class="col-md-4"> Layer : </td>
                            <td class="col-md-4">
                                @Html.DropDownList("FConfigid", ViewBag.Layers as SelectList, "---Select Layer---", new { onchange = "this.form.submit();" })
